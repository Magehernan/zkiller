<div>
	<div>
		Playing Game @Game.Id
	</div>
	<div>
		Turn @CurrentGame.Turn
	</div>
</div>

@if (CurrentGame.Status == 0)
{
	@if (alreadyVote)
	{
		<div>Waiting for turn end</div>
	}
	else if (alivePlayers is not null)
	{
		if (!IAmPlayer(alivePlayers))
		{
			<div>
				<img src="res/img_victim/1.jpg" />
				Your are dead
			</div>
		}
		else
		{
			<div style="display: flex; flex-direction: column; gap: 1rem;">
				@foreach (var player in alivePlayers)
				{
					@if (!IsPlayerAddress(player))
					{
						<Button OnClick="_ => VoteAsync(player)" Style="height: 50px">
							@if (IsPlayerKiller())
							{
								<img src="res/img_killer/logozkiller.png" width="30" />
							}
							else
							{
								<img src="res/img_victim/señala.png" width="30" />
							}
							@player
						</Button>
					}
				}
			</div>
		}
	}

}
else if (CurrentGame.Status == 1)
{
	@if (IsPlayerKiller())
	{
		<div class="match-end lost">Your lost</div>
	}
	else
	{

		<div class="match-end win">People Win</div>
	}
}
else
{
	@if (IsPlayerKiller())
	{
		<div class="match-end win">You Win</div>
	}
	else
	{
		<div class="match-end lost">ZKiller Win</div>
	}
}

